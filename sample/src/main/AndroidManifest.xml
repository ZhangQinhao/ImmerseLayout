<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monke.immerselayoutsample">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BackgroundImmerActivity"/>
        <activity android:name=".ImageImmerActivity"/>
        <activity android:name=".TabImmerActivity"/>
        <activity android:name=".ColorImmerActivity"/>
    </application>

</manifest>